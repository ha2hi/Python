# https://www.acmicpc.net/problem/14921
N = int(input())
arr = list(map(int, input().split()))
res_value = float('inf')
lt, rt = 0, N-1

while lt < rt:
    sum_val = arr[lt] + arr[rt]
    if abs(sum_val) < res_value:
        res_value = abs(sum_val)
        res = sum_val
    
    if sum_val > 0:
        rt -= 1
    else:
        lt += 1

print(res)
